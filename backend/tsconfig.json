{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "removeComments": true,
        
        "paths": {
            "@/*": ["*"]
        },
    },
    "tsc-alias": {
        "resolveFullPaths": true
    },
    "include": ["src/**/*", "src", "*"],
    "exclude": ["node_modules", "src/**/*.spec.ts"],
    "lib": [
        "es2019"
    ]
}